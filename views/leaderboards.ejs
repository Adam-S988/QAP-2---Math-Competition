<!-- The header ejs template is included to ensure our CSS and fonts are loaded -->
<%- include('partials/header') %>
<main class="main-content index_container">
    <div class="main">
    <h1>Math Competition Leaderboards</h1>
    <h2>Top 10:</h2>
    <table class="box">
        <thead>
            <tr>
                <th>Rank</th>
                <th>Streak</th>
                <th>Date Achieved</th>
            </tr>
        </thead>
        <tbody>
            <% top10.forEach((entry, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= entry.streak %></td>
                    <td><%= entry.date %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <a href="/">Return to Home</a>
    </div>
</main>
</body>
</html>
